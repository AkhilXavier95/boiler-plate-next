# Development Dockerfile
FROM node:20-alpine

RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy Prisma schema
COPY prisma ./prisma

# Generate Prisma Client
RUN npx prisma generate --no-engine

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]

